= simple_form_for(@pin, html: { multipart: true }) do |f|
  - if @pin.errors.any?
    #error_explanation
      %h2
        = pluralize(@pin.errors.count, "error")
        prohibited this contact from being saved:
      %ul
        - @pin.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.text_field :title, placeholder: 'enter title', class: 'form-control'

  .form-group
    = f.text_area :description, placeholder: 'enter description', class: 'form-control'

  .form-group
    = f.file_field :image

  .form-group
    = f.button :submit, class: 'btn btn-default'